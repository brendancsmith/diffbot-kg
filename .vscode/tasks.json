{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "delete_cassettes",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "${workspaceFolder}/tests/**/cassettes/*.yaml"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "applyTo": "allDocuments"
      }
    }
  ]
}
